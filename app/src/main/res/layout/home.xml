<?xml version="1.0" encoding="utf-8"?>
  <ScrollView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fadeScrollbars="true">


        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">



          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
              android:id="@+id/imageButton1"
              android:layout_width="200dp"
              android:scaleType="fitCenter"
              android:adjustViewBounds="true"
              android:layout_height="200dp"
              android:layout_weight="1"
              app:srcCompat="@mipmap/tulasi" />
            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@android:color/holo_purple"
              android:text="TULASI"/>
          </LinearLayout>

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
              android:id="@+id/imageButton2"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scaleType="fitCenter"
              android:adjustViewBounds="true"
              android:layout_weight="1"
              app:srcCompat="@mipmap/ashwagandha" />
            <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:textAlignment="center"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@android:color/holo_purple"
              android:text="ASHWAGANDHA"/>
          </LinearLayout>

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
              android:id="@+id/imageButton3"
              android:layout_width="200dp"
              android:layout_height="200dp"
              android:scaleType="fitCenter"
              android:adjustViewBounds="true"
              android:layout_weight="1"
              app:srcCompat="@mipmap/neem" />
            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@android:color/holo_purple"
              android:text="NEEM"/>
          </LinearLayout>

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
              android:id="@+id/buttonclear"
              android:layout_width="200dp"
              android:layout_height="200dp"
              android:scaleType="fitCenter"
              android:adjustViewBounds="true"

              android:layout_weight="1"
              app:srcCompat="@mipmap/lemongrass" />
            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@android:color/holo_purple"
              android:text="LEMONGRASS"/>
          </LinearLayout>

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
              android:id="@+id/imageButton5"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scaleType="fitCenter"
              android:adjustViewBounds="true"

              android:layout_weight="1"
              app:srcCompat="@mipmap/ammabhji" />
            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@android:color/holo_purple"
              android:text="AMMABHJI"/>
          </LinearLayout>

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
              android:id="@+id/imageButton6"

              android:scaleType="fitCenter"
              android:adjustViewBounds="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              app:srcCompat="@mipmap/niruri" />
            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@android:color/holo_purple"
              android:text="NIRURI"/>
          </LinearLayout>

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
              android:id="@+id/imageButton7"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scaleType="fitCenter"
              android:adjustViewBounds="true"

              android:layout_weight="1"
              app:srcCompat="@mipmap/nyctanthes" />
            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@android:color/holo_purple"
              android:text="NYCTANTHES"/>
          </LinearLayout>

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
              android:id="@+id/imageButton8"

              android:scaleType="fitCenter"
              android:adjustViewBounds="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              app:srcCompat="@mipmap/psoralea_corylifolia" />
            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@android:color/holo_purple"
              android:text="PSORALEA"/>
          </LinearLayout>

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
              android:id="@+id/imageButton9"
              android:layout_width="200dp"
              android:layout_height="200dp"
              android:scaleType="fitCenter"
              android:adjustViewBounds="true"

              android:layout_weight="1"
              app:srcCompat="@mipmap/rauwolfia_serpentina" />
            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@android:color/holo_purple"
              android:text="RAUWOLFIA"/>
          </LinearLayout>

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
              android:id="@+id/imageButton10"

              android:scaleType="fitCenter"
              android:adjustViewBounds="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              app:srcCompat="@mipmap/solanum_trilobatum" />
            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
